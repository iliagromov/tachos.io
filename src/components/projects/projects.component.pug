mixin project(props)
    .project-card 
        .project-card__img 
            picture 
                img(src=props.imgSrc, alt=props.title)
        .project-card__text
            .project-card__title #{props.title}
                .project-card__date #{props.date}
            .project-card__subtitle #{props.subtitle}
            .project-card__description #{props.subtitle}

mixin projects(array)
    each object in array 
        +project(object)

